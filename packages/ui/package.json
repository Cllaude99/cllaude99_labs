{
  "name": "@cllaude99/ui",
  "version": "0.1.1",
  "description": "Cllaude99 Design System - 일관성 있고 확장 가능한 UI 컴포넌트 라이브러리",
  "keywords": [
    "react",
    "ui",
    "design-system",
    "components",
    "emotion",
    "typescript"
  ],
  "author": "cllaude99",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cllaude99/claude_code.git",
    "directory": "packages/ui"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "echo 'No build needed in development - using src directly'",
    "clean": "rm -rf dist",
    "lint": "eslint \"**/*.ts*\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm clean && pnpm build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "react": "^18.2.0",
    "react-hot-toast": "2.6.0"
  },
  "devDependencies": {
    "@cllaude99/eslint-config": "workspace:*",
    "@cllaude99/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/blocks": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/test": "8.6.14",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.57.0",
    "storybook": "8.6.14",
    "typescript": "^5.5.4",
    "vite": "^5.1.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
